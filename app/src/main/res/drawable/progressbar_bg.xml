    <!--一级进度条的颜色，也可以直接替换成图片-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <solid android:color="#feda5f" />
                <stroke
                    android:width="1px"
                    android:color="#4a1b01" />

                <gradient
                    android:endColor= "#ff8f0f"
                    android:startColor= "#feda5f"
                    android:type= "linear"  />

            </shape>
        </clip>
    </item>
</layer-list>
