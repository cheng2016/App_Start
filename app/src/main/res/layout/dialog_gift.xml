<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/plan_shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/widget_size_20"
        android:layout_marginTop="@dimen/font_size_10"
        android:layout_marginLeft="@dimen/widget_size_20"
        android:layout_marginRight="@dimen/widget_size_20"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:padding="2dp"
            android:text="查看礼包"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_20"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/content"
            android:layout_width="@dimen/widget_size_220"
            android:layout_height="@dimen/widget_size_45"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/widget_size_10"
            android:layout_marginRight="@dimen/widget_size_10"
            android:gravity="center"
            android:padding="2dp"
            android:text="礼包码：6666666"
            android:background="@drawable/shape_button_gift_code"
            android:textColor="@color/black"
            android:visibility="visible"
            android:textSize="@dimen/font_size_16" />



        <TextView
            android:id="@+id/copy_btn"
            android:background="@drawable/shape_button_copy_gift"
            android:layout_width="@dimen/widget_size_150"
            android:layout_height="@dimen/widget_size_40"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/font_size_10"
            android:gravity="center"
            android:padding="2dp"
            android:text="复制礼包码"
            android:textColor="@color/white"
            android:visibility="visible"
            android:textSize="14sp" />
    </LinearLayout>



</LinearLayout>