<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_size_100"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="@dimen/widget_size_70"
        android:layout_height="@dimen/widget_size_70"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/widget_size_16"
        android:layout_marginTop="@dimen/widget_size_10"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:scaleType="fitXY"
        android:src="@mipmap/hy_first_icon" />


    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon_img"
        android:layout_marginLeft="@dimen/widget_size_20"
        android:layout_marginTop="@dimen/widget_size_5"
        android:layout_toRightOf="@+id/icon_img"
        android:alpha="0.5"
        android:text="勇者大冒险"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_size_25"
        android:layout_below="@+id/name_tv"
        android:layout_alignLeft="@+id/name_tv"
        android:layout_marginTop="@dimen/widget_size_8"
        android:text="原始部落冒险"
        android:textColor="@color/grey"
        android:textSize="@dimen/font_size_13" />

    <TextView
        android:id="@+id/go_btn"
        android:layout_width="@dimen/widget_size_70"
        android:layout_height="@dimen/widget_size_32"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/widget_size_16"
        android:background="@drawable/shape_download_bg"
        android:gravity="center"
        android:text="去看看"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/widget_size_16"
        android:layout_marginRight="@dimen/widget_size_16"
        android:background="@color/split_line_bg" />
</RelativeLayout>