<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainview"
    android:layout_width="@dimen/widget_size_150"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_100"
        android:scaleType="fitXY"
        android:src="@mipmap/hy_first_icon" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_25"
        android:layout_gravity="bottom"
        android:alpha="0.7"
        android:background="@drawable/shape_main_textview_bg"/>
    <TextView
        android:layout_gravity="bottom"
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_25"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/widget_size_10"
        android:text="末日进化"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_12" />
</FrameLayout>