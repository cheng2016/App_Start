<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="@drawable/hy_dialog_bg_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hy_text_color_red"
            android:text="个人信息保护提示"
            android:textSize="18dp">
        </TextView>
        <TextView
            android:id="@+id/hy_privacy_agree_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="@color/hy_text_color_balck2"
            android:text="">
        </TextView>
        <TextView
            android:id="@+id/btn_agree"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/hy_button_orgen_radius_bg"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/hy_text_color_white"
            android:textSize="14sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/btn_disagree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="不同意并且退出"
            android:textColor="@color/hy_text_color_gray"
            android:textSize="14sp"
            android:visibility="visible" />

</LinearLayout>