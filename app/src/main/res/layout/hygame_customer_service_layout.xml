<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_base_gray_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/hygame_cs_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/action_bar_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/hygame_cs_back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:src="@mipmap/btn_back_main" />

        <TextView
            android:id="@+id/hygame_cs_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="客服中心"
            android:textColor="@color/hy_text_color_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/hygame_cs_pro"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <WebView
        android:id="@+id/hygame_cs_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
